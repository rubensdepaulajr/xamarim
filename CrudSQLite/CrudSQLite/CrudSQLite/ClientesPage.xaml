<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudSQLite.ClientesPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">

            <Entry x:Name="NomeCliente" Placeholder="Nome"/>

            <Entry x:Name="EmailCliente" Placeholder="Email" Keyboard="Email"/>

            <Button x:Name="Salvar" Text="Salvar Dados" Clicked="SalvarClicked"/>

            <ListView x:Name="ListaCliente" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>